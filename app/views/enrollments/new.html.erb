<!-- Validation failure messages -->

<% if @enrollment.errors.any? %>
<% @enrollment.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Enrollment</h3>
      </div>
      <div class="panel-body">
        <form action="/create_enrollment" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <input type="hidden" id="game_id" name="game_id" placeholder="Game" class="form-control" value="<%= @enrollment.game_id %>">

          <input type="hidden" id="user_id" name="user_id" placeholder="Game" class="form-control" value="<%= current_user.id %>">

          <!-- Label and input for alias -->
          <div class="form-group">
            <label for="alias" class="col-sm-2 control-label">
              Alias
            </label>
            <div class="col-sm-10">
              <input type="text" id="alias" name="alias" placeholder="Enter your assassin alias!" class="form-control" value="<%= @enrollment.alias %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Enrollment
              </button>
              or
              <a href="/enrollments">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
