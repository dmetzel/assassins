<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @game.title %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <% if @next_enroll.user == current_user %>
            <p>YOU WON!</p>
            <% else %>
            <dl class="dl-horizontal">
              <dt>Your target</dt>
              <dd><%= @next_enroll.user.first_name + " " + @next_enroll.user.last_name %></dd>
              <% if !@confirmed %>
              <dd>(your kill has been recorded but is awaiting confirmation by your victim)</dd>
              <% end %>

              <dt>Kill deadline</dt>
              <dd></dd>
            </dl>

            <div class="btn-group btn-group-justified">
            <a href="/kills/new/<%= @game.id %>/<%= @next_enroll.user.id %>" class="btn btn-success">
                Report a kill
              </a>

            </div>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal" style="margin-top: 21px;">
              <dt>Description</dt>
              <dd><%= @game.description %></dd>

              <dt>Rules</dt>
              <dd><%= @game.rules %></dd>

              <dt>Start time</dt>
              <dd><%= @game.start_time %></dd>

              <dt>Kill window</dt>
              <dd><%= @game.kill_window %></dd>

              <dt>Gamemaster</dt>
              <dd><%= @game.gamemaster_id %></dd>

              <dt>Time zone</dt>
              <dd><%= @game.time_zone %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/games" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
